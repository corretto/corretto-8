# This image is used for integration testing toward Corretto
# RPM package.

FROM centos:6

# Pre-install OpenJDK8 as default JDK
RUN yum install -y java-1.8.0-openjdk-devel && yum clean all

COPY corretto-build/buildRoot/distributions/rpm /distributions
COPY docker/rpm/run_test.sh /

ENTRYPOINT ["/run_test.sh"]
